<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/foto_contatti"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:baselineAligned="false"
        android:contentDescription="@string/immagine_contatti"
        app:srcCompat="@drawable/ic_people" />

    <TextView
        android:id="@+id/txt_contatti"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/contatti"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionMode.Title" />

</LinearLayout>